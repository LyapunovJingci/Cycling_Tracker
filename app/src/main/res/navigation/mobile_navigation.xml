<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.lyapunov.cyclingtracker.fragment.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.lyapunov.cyclingtracker.fragment.map.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_graph"
        android:name="com.lyapunov.cyclingtracker.fragment.datagraph.DatagraphFragment"
        android:label="Data"
        tools:layout="@layout/fragment_graph" />

    <fragment
        android:id="@+id/navigation_info"
        android:name="com.lyapunov.cyclingtracker.fragment.info.InfoFragment"
        android:label="Information"
        tools:layout="@layout/fragment_info" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.lyapunov.cyclingtracker.fragment.setting.SettingFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>